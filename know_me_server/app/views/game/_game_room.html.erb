<div class = "full_body row">
    <div class = "col">
        <div class="up_row row">
            <div class="d-flex justify-content-center col">
                <%= @question.name %>
            </div>
        </div>
        


        <div class="down_row row">
            <div class="d-flex justify-content-center col">
                <div class="row" style="align-content: center;">
                    <%= render "game/partials/answers" %>
                </div>
            </div>
            <div id="button">
                <% if @number < 4 %>
                    <%= link_to "Next Question", game_room_path(number: @number+1), remote: true %>
                <% else %>
                    <%= link_to "End Game", end_screen_path %>
                <% end %>
            </div>
        </div>
    </div>
</div>

