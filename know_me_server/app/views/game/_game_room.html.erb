<div class="main-wrapper">
  <div id="question" class="row-fluid gradient-background">
    <h3> <%= @question.name %> </h3>
  </div>
  <div class="row-fluid white-background">
    <div class="image-row">
      <%= render "game/partials/answers" %>
    </div>
    <div id="button">
      <% if @number < 4 %>
        <%= link_to "Next Question", game_room_path(number: @number+1), remote: true %>
      <% else %>
        <%= link_to "End Game", end_screen_path %>
      <% end %>
    </div>
  </div>
</div>